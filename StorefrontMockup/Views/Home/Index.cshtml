@model StoreFrontHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center m-5">
    <img src="~/img/storefront-logo.png" />
    <div class="m-2">Get Your Fish On</div>
</div>
<hr />

@if (Model.InventoryItems.Any())
{
    <div class="row text-center">
        <div class="col-md-12 m-3">
            <p>Browse our inventory below and us a call at 1-800-555-FISHEQUIP to place an order.</p>
        </div>

        @foreach (var item in Model.InventoryItems)
        {
            <div class="col-md-4 text-center pb-4">
                <a href="~/Home/Product/@item.Id">
                    <img src="@item.PrimaryPhoto?.Url" height="200" class="p-3" />
                    <div>@Html.DisplayFor(x => item.Name)</div>
                </a>
            </div>
        }
        <div class="m-3"></div>
        <div class="col-md-12 m-3">
            <p>* We don't accept orders online or track inventory. Availability may vary, but we do accept Bitcoin.</p>
        </div>
    </div>
}
else
{
    <div class="col-md-12 text-center">
        <h2>No Items Available...</h2>
        <p>Please check back soon for some great deals!</p>
        <h1><i class="fas fa-2 fa-box-open"></i></h1>
    </div>
}